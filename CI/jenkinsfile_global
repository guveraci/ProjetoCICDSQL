pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage ("PowerShell") {
            steps {
                pwsh ( returnStatus: true, script: "&.\gera-pacotes.ps1")
            }
        
        stage('Test') {
            steps {
                sh 'dotnet test'
            }
        }
        
        stage('Publish') {
            steps {
                sh 'dotnet publish -c Release -o ./publish'
            }
        }
        
        stage('Database Setup') {
            steps {
                sh 'sqlcmd -S <server> -U <username> -P <password> -i path/to/your/database/script.sql'
            }
        }
    }
}
       