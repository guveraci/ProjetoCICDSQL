pipeline {
    agent any

    options {
        timeout(time: 30, unit: 'MINUTES')
    }
    stages {
        stage('Pre Build') {
            steps {
                echo ' Pre Building..'
            }
        }
        stage('Build') {
            tools {
                jdk "jdk-21" // the name you have given the JDK installation using the JDK manager (Global Tool Configuration)
            }
            steps {
                echo 'Building..'
                sh 'pwsh -File ./devops/gera-pacote.ps1 -DefinitionName Gerador'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }




}